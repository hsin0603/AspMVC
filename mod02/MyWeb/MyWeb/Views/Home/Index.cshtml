
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    @try
    {
        string s = Context.Request.Query["number"];
        if (s != null)
        {
            int number = int.Parse(s);
            @:Result: @(number+100)
        }
    }
    catch (FormatException)
    {
        @:請輸入數字
    }
    catch (Exception ex) { 
        @ex.Message
    }

  
    <form>
        <input type="text" name="number" />
        <input type="submit" />
    </form>
</body>
</html>
